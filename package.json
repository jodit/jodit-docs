{
  "name": "jodit-docs",
  "version": "0.1.30",
  "devDependencies": {
    "css-loader": "^0.28.11",
    "jodit": "^3",
    "jsdoc": "^3.5.5",
    "jsdoc-json": "^2.0.2",
    "react": "^16.2.0",
    "react-app-rewired": "^1.5.0",
    "react-dom": "^16.2.0",
    "react-markdown": "^3.3.0",
    "react-router-dom": "^4.2.2",
    "react-scripts": "1.1.1",
    "react-syntax-highlighter": "^7.0.2",
    "renamer": "^0.6.1",
    "typedoc": "^0.11.1"
  },
  "scripts": {
    "copy": "cp ./node_modules/jodit/README.md ./public/README.md",
    "doc-fires": "node parse.js",
    "doc-jsdoc": "jsdoc -c jsdoc.json --template ./node_modules/jsdoc-json --destination ./public/data-event.json --recurse ../jodit/build/jodit.js",
    "doc-ts": "typedoc --mode modules  --module umd --json ./public/data.json --ignoreCompilerErrors --tsconfig ./node_modules/jodit/tsconfig.json ../jodit/src/",
    "doc": "npm run doc-ts && npm run doc-jsdoc && npm run doc-fires && npm run copy",
    "build-rename": "npm run build-rename-js && npm run build-rename-css",
    "build-rename-js": "renamer --regex --find \"main\\.[^\\.]+\\.js(\\.map)?\" --replace \"main.js$1\" build\\static\\js\\*",
    "build-rename-css": "renamer --regex --find \"main\\.[^\\.]+\\.css(\\.map)?\"  --replace \"main.css$1\" build\\static\\css\\*",
    "newversion": "npm run doc && npm run newversion2",
    "newversion2": "npm run build && npm version patch --no-git-tag-version && cp ./package.json ./build/package.json && npm run github &&  npm publish build",
    "github": "git add --all  && git commit -m \"New version %npm_package_version%. Read more https://github.com/xdan/jodit/releases/tag/%npm_package_version% \" && git tag %npm_package_version% && git push --tags origin HEAD:master",
    "start": "react-app-rewired start",
    "build": "react-app-rewired build && npm run build-rename",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject"
  },
  "homepage": "/jodit/node_modules/jodit-docs/",
  "browserslist": {
    "development": [
      "last 2 chrome versions",
      "last 2 firefox versions",
      "last 2 edge versions"
    ],
    "production": [
      ">1%",
      "last 4 versions",
      "Firefox ESR",
      "not ie < 11"
    ]
  }
}
